<!DOCTYPE html>
<html>
    <head>
        <title>Todo list</title>
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <div class="box">
            <h1>To do list</h1>
        </div>
        <div class="box">
            <!-- <% %> - for any js code -->
            <% ejes.forEach(function(items){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <!-- separate para for each item -->
                        <input type="checkbox" name="cb" value="<%= items._id %>" onchange="this.form.submit()">
                        <p><%= items.name %></p>
                    </div>
                </form>                
            <% }) %>
            <form action="/" method="post">
                <input type="text" name="e1" placeholder="Enter the task">
                <button type="submit">+</button>
            </form>
        </div>
    </body>
</html>